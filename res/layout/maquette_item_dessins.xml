<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOfItemDessinInList"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/grey_button"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nomItemDessin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#efefef"
        android:textSize="20dip"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/couleurDessin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:visibility="visible" />

    <Button
        android:id="@+id/suppresionItemDessin"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignRight="@+id/nomItemDessin"
        android:layout_alignTop="@+id/nomItemDessin"
        android:background="@drawable/corbeillerouge"
        android:gravity="right" />

</RelativeLayout>