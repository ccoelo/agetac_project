<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#161e21"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="7dip"
        android:layout_weight="7"
        android:background="#2b302c"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelBarCouleur"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/label_boutton_bar_couleurs"
            android:textColor="#efefef"
            android:textSize="20dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/barreSeparation1"
            android:layout_width="10dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/separator"
            android:textColor="#3b423c"
            android:textSize="40dip"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupCouleur"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radioRouge"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#b5181d"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_couleur_rouge"
                android:textColor="#efefef" />

            <TextView
                android:id="@+id/barreSeparation2"
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/separator"
                android:textColor="#3b423c"
                android:textSize="40dip"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioBleu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#1085ad"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_couleur_bleu"
                android:textColor="#efefef" />

            <TextView
                android:id="@+id/barreSeparation3"
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/separator"
                android:textColor="#3b423c"
                android:textSize="40dip"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioVert"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#469e2f"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_couleur_vert"
                android:textColor="#efefef" />

            <TextView
                android:id="@+id/barreSeparation4"
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/separator"
                android:textColor="#3b423c"
                android:textSize="40dip"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioViolet"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#a100d0"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_couleur_violet"
                android:textColor="#efefef" />

            <TextView
                android:id="@+id/barreSeparation5"
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/separator"
                android:textColor="#3b423c"
                android:textSize="40dip"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioBlanc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#efefef"
                android:checked="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/button_couleur_blanc"
                android:textColor="#363636" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/list_SOIEC_SAOIECL"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="9" >
            </ListView>

            <Button
                android:id="@+id/envoyerSoiec"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dip"
                android:layout_marginTop="7dip"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:padding="7dip"
                android:text="@string/envoyer_soiec" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextSoiecSaoiecl"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/edittext_edition_soiec_bg"
                android:fadeScrollbars="false"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:lineSpacingExtra="10dip"
                android:padding="20dip"
                android:scrollbars="vertical"
                android:textColor="#efefef"
                android:textSize="20dip" >
            </EditText>

            <!-- Vue invisible a l'initialisation de l'activité -->

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fadeScrollbars="false"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"
                    android:lineSpacingExtra="10dip"
                    android:padding="20dip"
                    android:scrollbars="vertical"
                    android:textColor="#efefef"
                    android:textSize="20dip"
                    android:visibility="gone" />
            </ScrollView>

            <!-- Vue invisible a l'initialisation de l'activité -->

            <Button
                android:id="@+id/editerSoiec"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dip"
                android:layout_weight="1"
                android:background="@drawable/red_button"
                android:padding="7dip"
                android:text="@string/editer_soiec"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>