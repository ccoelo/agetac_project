<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOfItemMoyenInList"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:background="@drawable/red_button"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearance"
        android:textSize="30dip"
        android:padding="15dip"
        android:background="@drawable/grey_button"
        android:textColor="#efefef"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nomItemMoyenVoulu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#efefef"
        android:textSize="20dip"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/suppresionItem"
        android:layout_width="60dip"
        android:layout_height="fill_parent"
        android:layout_alignRight="@+id/nomItemMoyenVoulu"
        android:layout_alignTop="@+id/nomItemMoyenVoulu"
        android:background="@drawable/corbeillerouge"
        android:gravity="right" />

</RelativeLayout>